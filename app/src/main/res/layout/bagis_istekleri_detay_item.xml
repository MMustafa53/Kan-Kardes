<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="2.5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="2.5dp"
    android:background="@android:color/white"
    android:padding="10dp">

    <TextView
        android:id="@+id/tvkandetay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:text="KAN GRUBU:"
        android:textColor="@color/colorBlack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewIstekZamaniDetay" />

    <TextView
        android:id="@+id/tvhastdetay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:text="HASTANE ADI:"
        android:textColor="@color/colorBlack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvkandetay" />

    <TextView
        android:id="@+id/tvhastaddetay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:text="HASTA ADI:"
        android:textColor="@color/colorBlack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvhastdetay" />

    <TextView
        android:id="@+id/tvteldetay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:text="İLETİŞİM NUMARASI:"
        android:textColor="@color/colorBlack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvhastaddetay" />

    <TextView
        android:id="@+id/textViewBagisIstekleriKanGrubuDetay"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="AB Rh(+)"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/tvkandetay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/tvkandetay"
        app:layout_constraintTop_toTopOf="@+id/tvkandetay"
        app:layout_constraintVertical_bias="0.75" />

    <TextView
        android:id="@+id/textViewBagisIstekleriHastaneDetay"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:text="Atatürk Eğitim ve Araştırma Hastanesi"
        android:textColor="@color/colorBlack"
        app:layout_constraintBottom_toBottomOf="@+id/tvhastdetay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/tvhastdetay"
        app:layout_constraintTop_toTopOf="@+id/tvhastdetay"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textViewBagisIstekleriHastaneAdresDetay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text=""
        android:textColor="@color/colorBlack"
        app:layout_constraintBottom_toBottomOf="@+id/tvhastaddetay"
        app:layout_constraintEnd_toEndOf="@+id/textViewBagisIstekleriHastaneDetay"
        app:layout_constraintStart_toStartOf="@+id/textViewBagisIstekleriHastaneDetay"
        app:layout_constraintTop_toTopOf="@+id/tvhastaddetay"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textViewBagisIstekleriTelDetay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text=""
        android:textColor="@color/colorBlack"
        app:layout_constraintBottom_toBottomOf="@+id/tvteldetay"
        app:layout_constraintEnd_toEndOf="@+id/textViewBagisIstekleriHastaneAdresDetay"
        app:layout_constraintStart_toStartOf="@+id/textViewBagisIstekleriHastaneAdresDetay"
        app:layout_constraintTop_toTopOf="@+id/tvteldetay"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textViewIstekZamaniDetay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:textColor="@color/colorBlack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>